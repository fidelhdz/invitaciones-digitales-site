---
interface PROPS {
    titulo: string;
    imagen: string;
    ordenInverso?: boolean;
}

const { titulo, imagen, ordenInverso = false } = Astro.props as PROPS;
---

<section class="content">
    <div class="container">
        <div class="row justify-content-between align-items-center">
            <div class:list={["col-12", "col-lg-5", { "order-lg-last": ordenInverso }]} data-aos="zoom-in">
                <img src={ imagen } width="100%" alt={ titulo }>
            </div>
            <div class:list={["col-12", "col-lg-6", { "order-lg-first": ordenInverso }]} data-aos="zoom-out">
                <h2>{ titulo }</h2>
                <slot name="contenido" />
            </div>
        </div>
    </div>
</section>